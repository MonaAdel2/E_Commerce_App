<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECommerceApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:navigationBarColor">@color/white</item> <!-- nav background color -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorAccent">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColor</item>
    </style>

    <style name="Theme.ECommerceApp" parent="Base.Theme.ECommerceApp" />

    <style name="MainActivityTheme" parent="Theme.ECommerceApp">

        <item name="android:windowBackground">@drawable/launcher_background</item>

        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

    </style>
</resources>